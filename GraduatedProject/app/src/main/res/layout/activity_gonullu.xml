<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.mbilgil.graduatedproject.GonulluActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/kayitBtn"
        android:layout_width="210dp"
        android:layout_height="49dp"
        android:layout_marginBottom="230dp"
        android:text="Kayıt Ol"
        android:textColor="@android:color/background_light"
        android:theme="@style/kayitBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signIn" />

    <EditText
        android:id="@+id/mailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:layout_marginTop="53dp"
        android:ems="10"
        android:hint="Kullanıcı Adı/Mail"
        android:inputType="textPersonName"
        android:text="yusuf@gozumsun.com"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/sifreText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sifreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="textPersonName"
        android:password="true"
        android:text="1234567"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/signIn"
        app:layout_constraintStart_toStartOf="@+id/mailText"
        app:layout_constraintTop_toBottomOf="@+id/mailText" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="216dp"
        android:layout_height="49dp"
        android:layout_marginBottom="20dp"
        android:onClick="signIn"
        android:text="Giriş"
        android:textColor="@android:color/background_light"
        android:theme="@style/girisBtn"
        app:layout_constraintBottom_toTopOf="@+id/kayitBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sifreText" />

</android.support.constraint.ConstraintLayout>
